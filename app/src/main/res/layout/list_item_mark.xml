<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_mark_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/item_mark_latitude"
        app:layout_constraintEnd_toStartOf="@+id/item_mark_latitude"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_mark_latitude"
        tools:text="TextView" />

    <TextView
        android:id="@+id/item_mark_latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        tools:text="TextView"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/item_mark_longitude"
        app:layout_constraintEnd_toStartOf="@+id/item_mark_longitude"
        app:layout_constraintTop_toTopOf="@+id/item_mark_longitude" />

    <TextView
        android:id="@+id/item_mark_longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        tools:text="TextView"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/item_mark_show"
        app:layout_constraintEnd_toStartOf="@+id/item_mark_show"
        app:layout_constraintTop_toTopOf="@+id/item_mark_show" />

    <at.markushi.ui.CircleButton
        android:id="@+id/item_mark_show"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_location"
        app:cb_color="#FFE3E3"
        app:cb_pressedRingWidth="20dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>